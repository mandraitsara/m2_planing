{% extends 'account/baseLogin.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connectez vous !</h1>
                <form action="{{ path('account_login')}}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email...">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="" id="_password" class="form-control" placeholder="mot de passe...">
                    </div>
                    <div class="form-group"></div>
                    <button type="submit" class="btn btn-success">Connextion</button>
                
                </form>
            </div>
            
        </div>
    </div>
   
</div>
{% endblock %}
